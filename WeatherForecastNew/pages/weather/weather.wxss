.content {
  box-shadow: 10rpx 10rpx 5rpx #888888;
  margin-top: 60rpx;
  padding-bottom: 60rpx;
}

.body {
  text-align: center;
  display: flex;
  flex-direction: column;
}

.bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  margin-top: 50rpx;

}

.city {
  font-size: 100rpx;
  margin-top: 50rpx;
}

.today {
  margin: 20rpx 0 20rpx;
  font-size: 55rpx;
}

.weather {
  font-size: 80rpx;
  width: 50%;
}

.right {
  display: flex;
  flex-direction: column;
}

.wind {
  font-size: 60rpx;
}

.temp {
  font-size: 60rpx;
  font-family: Arial, Helvetica, sans-serif;
  margin-bottom: 30rpx;
}

.windSpeed {
  font-size: 40rpx;
}

.humidity {
  font-size: 40rpx;
}

.foot {
  position: fixed;
  left: 50%;
  bottom: 0rpx;
  transform: translate(-50%);
  margin: 30rpx 0 30rpx;
}
